    <ImageView
        android:id="@+id/info"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:clickable="true"
        android:src="@drawable/info"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/home_connectbutton"
        android:layout_width="wrap_content"
        android:layout_height="52dp"
        android:layout_marginBottom="92dp"
        android:fontFamily="@font/nbold"
        android:text="Connect"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/home_currentstatus"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:fontFamily="@font/nbold"
        android:text="Connection status"
        android:textSize="26sp"
        app:layout_constraintBottom_toTopOf="@id/home_connectstatus"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageView3"
         />

    <TextView
        android:id="@+id/home_connectstatus"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_marginBottom="84dp"
        android:background="#FFFFFF"
        android:backgroundTint="#FFFFFF"
        android:fontFamily="@font/ag"
        android:foregroundTint="#FFFFFF"
        android:gravity="center"
        android:text="Ready to connect"
        android:textColor="#4CAF50"
        android:textSize="30dp"
        app:drawableTint="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@id/home_connectbutton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="415dp"
        android:layout_height="304dp"
        android:src="@drawable/pngegg"
        tools:layout_editor_absoluteX="-2dp"
        tools:layout_editor_absoluteY="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>